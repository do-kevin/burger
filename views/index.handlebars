<h1>Eat-Da-Burger!</h1>

<h2>Burgers not devoured</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=false}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers devoured</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/if}}
    {{/each}}
</ul>

<form class="create-form">
    <div class="form-group">
        <label for="bn">Burger Name</label>
        <input type="text" id="bn" name="name">
    </div>

    <div class="form-group">
        <label for="devoured"></label><br>
        <input type="radio" name="devoured" value="0" checked>Not Devoured yet<br>
    </div>

    <button type="submit">Submit Burger</button>
</form>