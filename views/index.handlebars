<h1>Eat-Da-Burger!</h1>



<section class="hero is-small is-warning">
    <div class="hero-body">
    <h2 class="subtitle">Burgers not eaten</h2>
    <ul>
        {{#each burger}}
            {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}
            {{/unless}}
        {{/each}}
    </ul>
    </div>
</section>

<section class="hero is-small is-danger">
    <div class="hero-body">
    <h2 class="subtitle">Burgers devoured</h2>
    <ul>
        {{#each burger}}
        {{#if devoured}}
            {{burger_name}}
            {{!-- {{> burgers/burger-block devoured=true}} --}}
        {{/if}}
        {{/each}}
    </ul>
    </div>
</section>



<form class="create-form">
    <div class="form-group">
        <label for="bn">Burger Name</label>
        <input type="text" id="bn" name="name">
    </div>

    <div class="form-group">
        <label for="devoured"></label><br>
        <input type="radio" name="isItDevoured" value="0" checked> Not devoured yet<br>
    </div>

    <button type="submit">Submit Burger</button>
</form>