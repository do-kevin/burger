<h1>Eat-Da-Burger!</h1>



<section class="hero is-small is-warning">
    <div class="hero-body">
    <h2 class="subtitle">Burgers not eaten</h2>
    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/unless}}
        {{/each}}
    </ul>
    </div>
</section>

<section class="hero is-small is-danger">
    <div class="hero-body">
    <h2 class="subtitle">Burgers devoured</h2>
    <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/if}}
        {{/each}}
    </ul>
    </div>
</section>



<form class="create-form">
    <div class="form-group">
        <label for="bn">Burger Name</label>
        <input type="text" id="bn" name="name">
    </div>

    <div class="form-group">
        <label for="devoured"></label><br>
        <input type="radio" name="devoured" value="0" checked><br>
    </div>

    <button type="submit">Submit Burger</button>
</form>